@model MovieEditModel

@{
    ViewData["Title"] = BasicRes.New;
    ViewData["LocaleName"] = System.Threading.Thread.CurrentThread.CurrentCulture.Name;
}

<h1>@BasicRes.New</h1>

<h4>Movie</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-id="@Model.MovieDto.Id" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" asp-for="MovieDto.Id" />
            <div class="form-group">
                <label asp-for="MovieDto.Title" class="control-label"></label>
                <input asp-for="MovieDto.Title" class="form-control" />
                <span asp-validation-for="MovieDto.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.Price" class="control-label"></label>
                <input asp-for="MovieDto.Price" class="form-control" />
                <span asp-validation-for="MovieDto.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.ReleaseDate" class="control-label"></label>
                <input asp-for="MovieDto.ReleaseDate" class="form-control" type="date" />
                <span asp-validation-for="MovieDto.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.GenreId" class="control-label"></label>
                <select asp-for="MovieDto.GenreId" class="form-control" asp-items="Model.Genres"></select>
            </div>
            <div class="form-group">
                <label asp-for="MovieDto.MediumTypeCode" class="control-label"></label>
                <select asp-for="MovieDto.MediumTypeCode" class="form-control" asp-items="Model.MediumTypes"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@BasicRes.New" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/Movies/Index">@BasicRes.BacktoList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
